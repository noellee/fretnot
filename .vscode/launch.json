{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Launch API dev server",
            "request": "launch",
            "cwd":"${workspaceFolder}/packages/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "type": "node",
            "name": "Launch Playground dev server",
            "request": "launch",
            "cwd":"${workspaceFolder}/packages/playground",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
    ]
}