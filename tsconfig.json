{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@fretnot/*": ["packages/*/src"],
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "packages/*/src",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
